            @Html.LabelFor(model => model.TENDANHMUC, "Tên danh mục", htmlAttributes: new { @class = "control-label ", @style = "float:left;" })
            <div class="">
                @Html.EditorFor(model => model.TENDANHMUC, new { htmlAttributes = new { @class = "form-control", @style = "padding:15px;" } })
                @Html.ValidationMessageFor(model => model.TENDANHMUC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12">
            <input type="submit" value="Thêm" class="btn btn-sm btn-info" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-sm btn-danger normal-text" })
        </div>
    </div>

}


