@model IEnumerable<Nhom3.Model.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header" style="text-align:left;">Quản lý sản phẩm</h1>
        </div>
    </div>
    <div class="row" style="text-align:left;margin-left:10px;margin-bottom:10px;">
        <button class="btn btn-sm btn-success ">
            <a href="@Url.Action("Create","Product")" style="text-decoration: none; color: white;">+Thêm sản phẩm</a>
        </button>
    </div>
    <div class="row">
        <div class="col-lg-12">
          
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Giá khuyến mãi</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {

                    <tbody>
                        <tr>
                            <td>@item.MASANPHAM</td>
                            <td>@item.TENSANPHAM</td>
                  
                            <td>@item.GIABAN</td>
                            <td>@item.GIAKM</td>

                            <td>
                                <button class="btn btn-success">
                                    <a href="@Url.Action("Details","Product", new{id = item.MASANPHAM})" style="text-decoration: none; color: white;">Xem</a>
                                </button>
                                <button class="btn btn-info">
                                    <a href="@Url.Action("Edit","Product" , new {id = item.MASANPHAM })" style="text-decoration: none; color: white;">Sửa</a>
                                </button>
                                <button class="btn btn-danger">
                                    <a href="@Url.Action("Delete","Product", new{id = item.MASANPHAM})" style="text-decoration: none; color: white;">Xoá</a>
                                </button>

                            </td>
                        </tr>

                    </tbody>
                }

            </table>
        </div>
    </div>
</div>
