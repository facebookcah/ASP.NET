@model IEnumerable<Nhom3.Model.CHITIETDONHANG>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


    <div class="row bg-primary">
        <div class="col-lg-12">
            <h1 class="page-header" style="text-align:left;">Thông tin đơn hàng</h1>
        </div>
    </div>
   
        <div class="col-lg-12" style="margin-top:20px;">
            <table class="table table-striped table-hover" >

                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình thức thanh toán</th>
                        <th>Ngày đặt</th>
                        <th>Tình trạng</th>
                        <th>Số lượng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.MADONHANG</td>
                            <td>@item.SANPHAM.TENSANPHAM</td>
                            <td>@item.DONHANG.HTTT.TENHTTT</td>
                            <td>@item.DONHANG.NGAYDAT</td>

                           @if(item.DONHANG.TINHTRANG == 1)
                           {
                               <td>Đã thanh toán</td>
                           }
                           else
                           {
                               <td>Chưa thanh toán</td>
                           }
                            <td>@item.SOLUONG</td>



                            <td>
                                <button class="btn  btn-sm btn-info">
                                    <a href="@Url.Action("Details", "Order", new {id = item.MADONHANG})"  style="text-decoration: none; color: white;">Xem</a>
                                </button>
                                <button class="btn  btn-sm btn-danger">
                                    <a href="@Url.Action("Delete", "Order", new { id = item.MADONHANG }) " style="text-decoration: none; color: white;">Xóa</a>

                                </button>

                            </td>
                        </tr>

                    </tbody>
                }

            </table>

        </div>


