@model Nhom3.Model.TAIKHOAN

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row bg-primary">
    <div class="col-lg-12">
        <h1 class="page-header" style="text-align:left;">Thông tin tài khoản</h1>
    </div>
</div>

<div class="row" style="margin-top:20px;">
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.TENDANGNHAP, "Tên đăng nhập", htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
            @Html.EditorFor(model => model.TENDANGNHAP, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.MATKHAU, htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
            @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.TRANGTHAI, "Trạng thái", htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
            <br />
            @Html.EditorFor(model => model.TRANGTHAI, new { htmlAttributes = new { @class = "checkbox", disabled = "disabled" } })
        </div>
    </div>

    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.KHACHHANG.TENKH, "Tên khách hàng", htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
            @Html.EditorFor(model => model.KHACHHANG.TENKH, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.QUYEN.TENQUYEN, "Quyền sử dụng", htmlAttributes: new { @class = "bmd-label-floating", @style = "float:left;" })
            @Html.EditorFor(model => model.QUYEN.TENQUYEN, new { htmlAttributes = new { @class = "form-control", disabled = "@disabled" } })
        </div>
    </div>
    <div class="col-md-12">

        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-sm btn-primary normal-text" })
    </div>
</div>


