@model Nhom3.Model.TAIKHOAN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row bg-primary">
    <div class="col-lg-12">
        <h1 class="page-header" style="text-align:left;">Xóa thông tin tài khoản</h1>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-top:20px;">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MATAIKHOAN)

        <div class="form-group">

            <div class="col-md-12">
                @Html.LabelFor(model => model.TENDANGNHAP, htmlAttributes: new { @class = "control-label ", @style = "float:left;" })
                @Html.EditorFor(model => model.TENDANGNHAP, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.TENDANGNHAP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.MATKHAU, htmlAttributes: new { @class = "control-label", @style = "float:left;" })

                @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">

                @Html.LabelFor(model => model.TRANGTHAI, htmlAttributes: new { @class = "control-label", @style = "float:left;" })
                <br />
                @Html.EditorFor(model => model.TRANGTHAI, new { htmlAttributes = new { @class = "checkbox", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.TRANGTHAI, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.MAKH, "Tên khách hàng", htmlAttributes: new { @class = "control-label ", @style = "float:left;" })

                @Html.EditorFor(model => model.MAKH, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.MAKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12">
                @Html.LabelFor(model => model.TENQUYEN, "Tên quyền", htmlAttributes: new { @class = "control-label`", @style = "float:left;" })
                @Html.EditorFor(model => model.TENQUYEN, new { htmlAttributes =new  { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.TENQUYEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-lg-12">
            <input type="submit" value="Xóa" class="btn btn-sm btn-danger normal-text" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-sm btn-primary normal-text" })
        </div>
    </div>
}