@model IEnumerable<Nhom3.Model.TAIKHOAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header" style="text-align:left;">Quản lý tài khoản</h1>
        </div>
    </div>
    <div class="row" style="text-align:left; margin-left:10px;margin-bottom:5px;">
        <button class="btn btn-sm btn-success ">
            <a href="@Url.Action("Create","Account")" style="text-decoration: none; color: white; ">+Thêm tài khoản</a>
        </button>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ tên</th>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                        <th>Quyền</th>
                        <th>Tình trạng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.MATAIKHOAN</td>
                            <td>@item.KHACHHANG.TENKH</td>
                            <td>@item.TENDANGNHAP</td>
                            <td>@item.MATKHAU</td>
                            <td>@item.TENQUYEN</td>
                            <td>@item.TRANGTHAI</td>
                            <td>
                                <button class="btn btn-info">
                                    <a href="@Url.Action("Details","Account", new {id = item.MATAIKHOAN})" style="text-decoration: none; color: white;">Xem chi tiết</a>
                                </button>
                                <button class="btn btn-success">
                                    <a href="@Url.Action("Edit","Account",new {id = item.MATAIKHOAN })" style="text-decoration: none; color: white;">Sửa</a>
                                </button>
                                <button class="btn btn-danger">
                                    <a href="@Url.Action("Delete","Account",new {id = item.MATAIKHOAN })" style="text-decoration: none; color: white;">Xóa</a>
                                </button>
                            </td>
                        </tr>
                        

                    </tbody>
                }

            </table>

        </div>
    </div>
</div>
